{
  "name": "project-management-system",
  "version": "1.0.0",
  "private": true,
  "description": "Project Management System - Monorepo",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "build": "npm run build --workspace=frontend && npm run build --workspace=backend",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
    "test": "npm run test --workspace=backend",
    "clean": "rimraf node_modules",
    "reinstall": "npm run clean && npm install",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": "npm run lint --workspace=frontend -- --fix",
    "backend/**/*.{js,jsx,ts,tsx}": "npm run lint --workspace=backend -- --fix",
    "*.{json,md}": "prettier --write"
  }
}
